<!DOCTYPE html>
<html>
<head>
<title>TinyLink Dashboard</title>
</head>
<body>
<h1>TinyLink</h1>

<form method="post" action="/create">
<input type="text" name="url" placeholder="https://example.com" required />
<input type="text" name="customCode" placeholder="Custom code (optional)" />
<button type="submit">Generate</button>
</form>

<% if (id) { %>
<p>Generated: <%= baseUrl %>/<%= id %></p>
<% } %>

<table border="1">
<tr>
    <th>#</th>
    <th>Code</th>
    <th>URL</th>
    <th>Clicks</th>
</tr>
<% links.forEach((l,i)=>{ %>
<tr>
<td><%= i+1 %></td>
<td><a href="/code/<%= l.code %>"><%= l.code %></a></td>
<td><%= l.targetUrl %></td>
<td><%= l.totalClicks %></td>
</tr>
<% }) %>
</table>

</body>
</html>
